import java.util.*;
public class sumofodd {
    public static int Oddsum(int n){
        int sum=0;
        for(int i=1;i<=n;i+=2){
            sum+=i;
        }
        return sum;

    }
    public static void main(String[]args){
            Scanner sc=new Scanner(System.in);
        System.out.println("Enter the number :");
        int n=sc.nextInt();
        int res=Oddsum(n);
        System.out.println(res);


    }
}
